\mode<presentation>

% Settings
\setbeamercolor*{title page header}{fg=vubbleu}
\setbeamercolor*{subtitle page header}{fg=vuboranje}
\setbeamercolor*{title}{fg=vubbleu}
\setbeamercolor*{part title}{fg=vuboranje}
\setbeamercolor*{section title}{fg=vubbleu}
\setbeamercolor*{subsection title}{fg=vuboranje}
\setbeamercolor*{author}{fg=vuboranje}
\setbeamercolor*{date}{fg=vubbleu}
\setbeamercolor*{section in toc}{fg=vuboranje}
\setbeamercolor*{subsection in toc}{fg=vubbleu}
\setbeamercolor*{description item}{fg=vubbleu}

% Itemize & enumerate
\setbeamercolor{itemize item}{fg=vubbleu}
\setbeamercolor{itemize subitem}{fg=vubbleu}
\setbeamercolor{itemize subsubitem}{fg=vubbleu}
\setbeamercolor{enumerate item}{fg=vubbleu}
\setbeamercolor{enumerate subitem}{fg=vuboranje}

\renewcommand{\emph}[1]{{\color{vuboranje}#1}}

\setbeamercolor{block title}{fg=vubbleu}

\if@coloredBlocks
    \setbeamercolor{block title}{bg=vubbleu,fg=white}
    \setbeamercolor{block body}{bg=vubbleu!10,fg=black}
    \AtBeginEnvironment{theorem}{%
        \setbeamercolor{block title}{bg=vuboranje,fg=white}
        \setbeamercolor{block body}{bg=vuboranje!10,fg=black}
    }
\fi

\mode
<all>
